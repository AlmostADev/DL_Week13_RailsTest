<div class="container">
    <div class="row m-4">
        <div class="col-md-6">
            <h1>ToDo Still not Finished</h1>
            <br>
            <% @todos.each do |t| %>
                <% if t.completed == false %>
                <ul>
                <li> <%= t.description %> </li>
                </ul>
                <% end %>
            <% end %>
        </div>
        <div class="col-md-6">
            <h1>ToDo Finished</h1>
            <br>
            <% @todos.each do |t| %>
                <% if t.completed %>
                    <ul>
                    <li> <%= t.description %> </li>
                    </ul>
                <% end %>
            <% end %>
        </div>
    </div>
</div>